// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserModel {
  id       String @id @unique
  name     String
  email    String @unique
  password String
  Todo     Todo[]

  @@map("users")
}

model Todo {
  id          String    @id @unique
  description String
  createdAt   DateTime  @default(now())
  startAt     DateTime
  endAt       DateTime
  owner       UserModel @relation(fields: [ownerId], references: [id])
  ownerId     String

  @@map("todos")
}
