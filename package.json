{
  "name": "simple-todo-backend",
  "version": "1.0.0",
  "description": "API Simples de uma Lista de Tarefas (Estudo)",
  "main": "main.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json && tsc-alias",
    "start": "node -r dotenv/config dist/main.js",
    "start:dev": "dotenv -e .env.dev -- ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --clear src/main.ts",
    "lint": "eslint 'src/**' 'tests/**'",
    "lint:fix": "npm run lint -- --fix",
    "style:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest watch",
    "test:coverage": "npm run test -- --coverage",
    "test:e2e": "dotenv -e .env.dev -- vitest run --config ./vitest.e2e.config.ts",
    "husky:prepare": "husky install",
    "migrate:dev": "dotenv -e .env.dev -- prisma migrate dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MauricioRobertoDev/simple-todo-backend.git"
  },
  "keywords": [
    "todo",
    "todo",
    "list",
    "lista",
    "de",
    "tarefas",
    "api"
  ],
  "author": "Mauricio Roberto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MauricioRobertoDev/simple-todo-backend/issues"
  },
  "homepage": "https://github.com/MauricioRobertoDev/simple-todo-backend#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^16.11.10",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitest/coverage-c8": "^0.26.3",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "prisma": "^4.9.0",
    "supertest": "^6.3.3",
    "ts-node": "10.7.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "typescript": "4.5.2",
    "vitest": "^0.26.3"
  },
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.8.0",
    "sequelize": "^6.28.0"
  }
}
